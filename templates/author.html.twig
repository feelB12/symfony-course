{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bookdetails.css') }}">
{% endblock stylesheets %}

{% block main %}
    <div class="card">
        <div class="card-text">
            <h2>{{ author.firstName }} {{ author.lastName }}</h2>
            {% if author.deathDate %}
                <h3>Mort le : {{ author.deathDate | date('D-m-Y') }}</h3>
            {% else %}
                Cet auteur n'est pas encore mort
            {% endif %}
        </div>
    </div>
{% endblock main %}